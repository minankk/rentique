    <div class="navbar">
        <a href="#">Home</a>
        <a href="#">About</a>
        <form class="search-box" action="#" method="GET">
            <input type="text" placeholder="Search for...">
            <input type="submit" value="Search">
        </form>
    </div>

    <h1>Browse new in </h1>

    <div class="grid-container">
        <% @items.each do |item| %>
            <div class="card">
                <div class="card-image">
                    <!-- You can add the image here -->
                    <!-- <img src="item_image.jpg" alt="Item Image"> -->
                    <%= image_tag item.image_url if item.image_url %>
                </div>
                <div class="card-content">
                    <%= link_to item.description, item_path(item) %>
                </div>
            </div>
        <% end %>
    </div>
